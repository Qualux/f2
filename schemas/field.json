{
    "$id": "https://zeroeditor.io/blog-post.schema.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "A representation of a structured data field.",
    "type": "object",
    "required": ["id", "title", "type"],
    "properties": {
      "id": {
        "type": "number",
        "description": "Unique identifier for a field."
      },
      "type": {
        "type": "string"
      },
      "title": {
        "type": "string"
      },
      "name": {
        "type": "string"
      },
      "storage": {
        "type": "string"
      }
    }
  }
  