    "title": {
        "type": "text",
        "name": "title",
        "title": "Field Title",
        "label": "Field Title",
        "placeholder": "Enter title for display..."
    },
    "label": {
        "type": "text",
        "name": "label",
        "title": "Field Label",
        "label": "Field Label",
        "placeholder": "Enter label for display, leave blank to turn off label rendering..."
    },
    "name": {
        "type": "text",
        "name": "name",
        "title": "Field Name",
        "label": "Field Name",
        "placeholder": "Unique lowercase system name..."
    },
    "field_conditions": {
        "type": "true_false",
        "name": "field_conditions",
        "title": "Render Conditionally",
        "label": "Render Conditionally",
        "placeholder": "Unique lowercase system name..."
    },
    "field_condition_rules": {
        "type": "text",
        "name": "field_condition_rules",
        "title": "Configure Condition Rules",
        "label": "Configure Condition Rules",
        "placeholder": "Condition rules...",
        "field_conditions": true,
        "field_condition_rules": [
            [
                {
                    "field": "field_conditions",
                    "operator": "=",
                    "value": true
                }
            ]
        ]
    },
    "placeholder": {
        "type": "text",
        "name": "placeholder",
        "title": "Field Placeholder",
        "label": "Field Placeholder",
        "placeholder": "Enter placeholder text..."
    },
    "choices": {
        "type": "collection",
        "name": "choices",
        "title": "Field Choices",
        "label": "Field Choices"
    },
    "field_default_value": {
        "type": "text",
        "name": "field_default_value",
        "title": "Default Value",
        "label": "Default Value"
    },
    "field_group_title": {
        "type": "text",
        "name": "field_group_title",
        "title": "Field Group Title",
        "label": "Field Group Title",
        "placeholder": "Enter title for display..."
    },
    "field_group_fields": {
        "type": "post_collection",
        "name": "field_group_fields",
        "title": "Fields",
        "label": "Fields"
    },
    "field_group_post_type": {
        "type": "text",
        "name": "field_group_post_type",
        "title": "Post Type",
        "label": "Post Type",
        "placeholder": "Enter post type to assign field group..."
    },
    "field_group_options_page": {
        "type": "number",
        "name": "field_group_options_page",
        "title": "Options Page",
        "label": "Options Page",
        "placeholder": "Options page ID to assign field group..."
    }
